
<h2 class="title is-3">Welcome to your dashboard, {{name}}!</h2>
<h3 class="title is-3 message">Create New Post</h3>
<form class="new-blog-post">
  <div class="control">
    <label class="title is-5">Title</label>
    <input class="input" id="blog-title" type="text" placeholder="blog title">
  </div>
  <br>
  <div class="control">
    <textarea class="textarea is-hovered" id="blog-content" placeholder="blog content"></textarea>
  </div>
  <br>
  <button class="button is-dark submit" type="submit">Add Post</button>
</form>
{{#if blogs}}
<h3 class="title is-3 message">Your Current Posts</h3>
{{/if}}
{{#each blogs as |blog|}}
<article class="message">
  <div class="message-header">
    <p>
      {{blog.title}}
    </p>
    <div class="update-title">
      <button data-id="{{blog.id}}">Update Post Title</button>
    </div>
    <div class="update-post">
      <button data-id="{{blog.id}}">Update Post Content</button>
    </div>
    <div class="delete-post">
      <button data-id="{{blog.id}}">Delete Post</button>
    </div>
    
  </div>
  <div class="message-body">
    <p>{{blog.description}}</p>
  </div>
</article>
{{/each}}
<script src="./js/profile.js"></script>