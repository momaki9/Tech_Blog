<section class="section message is-dark">
  <h2 class="title message-header">{{title}} by: {{user.name}} 
    Posted on {{format_date date_posted}}</h2>
  <p class="subtitle message-body">{{description}}</p>
</section>
<button class="add-reply">Reply</button>
<div id="comment-section"></div>
<button class="add-new-comment hidden"></button>
{{#if comments}}
<h2 class="title is-6">Comments:</h2>
{{/if}}
{{#each comments as |comment|}}
<article class="message">
<div class="message-header">
   <p>From {{comment.user.name}} added on {{format_date comment.date_posted}}</p>
</div>
<div class="message-body">
{{comment.content}}
</div>
</article>
{{/each}}
<script src="./js/comment.js"></script>